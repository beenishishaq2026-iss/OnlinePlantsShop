@model OnlinePlantsShop_.Models.Order

@{
    ViewBag.Title = "Delete Order";
}

<h2>Delete Order</h2>

<h4>Are you sure you want to delete this order?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Plant Names</dt>
        <dd class="col-sm-10">@Model.PlantNames</dd>

        <dt class="col-sm-2">Quantities</dt>
        <dd class="col-sm-10">@Model.Quantities</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="OrderConfirmation" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container my-5" style="max-width: 600px;">
    <div class="text-center mb-4">
        <h1 class="display-4" style="color: #2F6B3E;">@ViewData["Title"]</h1>
        <p class="lead text-muted" style="color: #4B7A5F;">
            We’re committed to protecting your personal data and ensuring a secure, green experience.
        </p>
    </div>

    <div class="px-3" style="color: #3C5A2B;">
        <h5 style="color: #4A7C3A;">🌿Information We Collect</h5>
        <p>Only necessary personal data, such as name and email, to provide better service.</p>

        <h5 style="color: #4A7C3A;">🌿How We Use Your Data</h5>
        <p>To improve your experience and keep you informed. We never share your data without consent.</p>

        <h5 style="color: #4A7C3A;">🌿Security</h5>
        <p>We use strong measures to keep your information safe.</p>
    </div>
</div>
